{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "ES2015",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "downlevelIteration": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "quick-utils-js": [
        "./src/index.ts"
      ]
    },
    "types": ["vitest/globals"]
  },
  // 入口文件
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue",
    "node_modules/**/*.d.ts"
  ],
  "exclude": ["node_modules/**"]
}
