{
  "name": "quick-utils-js",
  "version": "1.2.0",
  "description": "Tool functions commonly used in front-end services",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "common",
    "quick",
    "util",
    "typeScript",
    "javaScript",
    "web"
  ],
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --config ./tsup.config.ts",
    "demo": "pnpm run --filter ./demo dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "eslint": "eslint . --ext .ts,.js,.vue",
    "lint": "lint-staged",
    "eslint:fix": "eslint . --fix --ext .ts,.js,.vue",
    "prepare": "husky install",
    "commit": "cz",
    "release": "release-it --"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:zguiyang/quick-utils-js.git"
  },
  "author": {
    "name": "zhaoguiyang",
    "email": "2770723534@qq.com",
    "url": "https://github.com/zguiyang"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vitest/coverage-c8": "^0.23.2",
    "builtin-modules": "^3.1.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.6.0",
    "eslint-config-alloy": "^4.4.0",
    "eslint-plugin-vue": "^9.2.0",
    "husky": "^7.0.4",
    "jsdom": "^20.0.0",
    "lint-staged": "^12.4.0",
    "release-it": "^15.1.1",
    "ts-jest": "^27.1.3",
    "tslib": "^2.0.0",
    "tsup": "^6.1.2",
    "typescript": "^4.8.3",
    "vitepress": "1.0.0-alpha.13",
    "vitest": "^0.23.2",
    "vue": "^3.2.39"
  },
  "dependencies": {
    "bignumber.js": "^9.0.2",
    "dayjs": "^1.10.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run eslint:fix"
  }
}
